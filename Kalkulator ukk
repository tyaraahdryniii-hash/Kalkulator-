  <script>
    // Fungsi menambahkan karakter ke layar
    function tambahInput(value) {
      document.getElementById("layar").value += value;
    }

    // Fungsi menghitung hasil dari input
    function hitung() {
      try {
        document.getElementById("layar").value = eval(document.getElementById("layar").value);
      } catch {
        document.getElementById("layar").value = "Error";
      }
    }

    // Fungsi menghapus semua isi layar
    function hapus() {
      document.getElementById("layar").value = "";
    }

    // Fungsi menghapus satu karakter terakhir
    function hapusSatu() {
      let layar = document.getElementById("layar").value;
      document.getElementById("layar").value = layar.slice(0, -1);
    }
  </script>
